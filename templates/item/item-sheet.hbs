{{ log 'HEROSYS item-sheet' this }}
<form class="{{cssClass}} item-sheet" autocomplete="off" data-id="{{item._id}}">
    <header class="sheet-header">
        <img class="profile-img" name="img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="header-fields">
            <div class="xmlid">{{item.system.XMLID}}</div>
            <h1 class="charname">
                <input name="name" type="text" value="{{name}}" placeholder="Name" />
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Common --}}
        {{> (getModulePath 'item/item-partial-common.hbs') }}

        {{!-- Active Points --}}
        {{> (getModulePath 'item/item-partial-active-points.hbs') }}

        {{!-- Adders & Modifiers --}}
        {{> (getModulePath 'item/item-partial-adders-modifiers.hbs') }}
        
    </section>

</form>