<table>

    {{!-- ADDERS --}}
    <tr class="activeEffects adders" >
        <th class="left">Adders</th>
        <th>Cost</th>
        <th class="right">
            <a class="item-control modifier-create" title="Create"
                data-action="createAdder">
                <i class="fas fa-plus"></i></a>
        </th>
    </tr>
    {{#each item.system.ADDER as |adder XMLID|}}
    <tr data-xmlid="{{adder.XMLID}}" data-adder="{{adder.ID}}">
        <td class="left">{{adder.ALIAS}}</td>
        <td>{{#if adder.SELECTED}}{{adder.baseCost}}{{/if}}</td>
        <td class="right">
            <a class="item-control modifier-edit" data-action="edit" title="Edit"><i
                    class="fas fa-edit"></i></a>
            <a class="item-control modifier-delete" data-action="delete" title="Delete">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>

        {{#each adder.ADDER as |adder XMLID|}}
        <tr  class="modifierAdder indent" data-xmlid="{{adder.XMLID}}" data-adder="{{adder.ID}}">
            <td class="left">{{adder.ALIAS}}</td>
            <td>{{adder.baseCost}}</td>
            <td class="right">
                {{!-- <a class="item-control modifier-edit" data-action="edit" title="Edit"><i
                        class="fas fa-edit"></i></a>
                <a class="item-control modifier-delete" data-action="delete" title="Delete">
                    <i class="fas fa-trash"></i>
                </a> --}}
            </td>
        </tr>
        {{/each}}
    {{/each}}

    {{!-- {{Modifiers}} --}}
    <tr class="activeEffects adders">
        <th class="left">Modifiers</th>
        <th>Cost</th>
        <th class="right">
            <a class="item-control modifier-create" title="Create"
                        data-action="createModifier">
                        <i class="fas fa-plus"></i></a>
        </th>
        {{!-- <th>Add</th> --}}
    </tr>
    {{#each item.system.MODIFIER as |mod id|}}
    <tr data-xmlid="{{mod.XMLID}}" data-modifier="{{mod.ID}}">
        <td class="left">{{mod.ALIAS}}</td>
        <td>{{mod.baseCost}}</td>
        <td class="right">
            {{#if @root.alphaTesting}}
            <a class="item-control modifier-edit" data-action="edit" title="Edit"><i
                    class="fas fa-edit"></i></a>
            <a class="item-control modifier-delete" data-action="delete" title="Delete">
                <i class="fas fa-trash"></i>
            </a>
            {{/if}}
        </td>
    </tr>

    {{#each mod.ADDER as |adder id|}}
    <tr class="modifierAdder indent" data-xmlid="{{adder.XMLID}}" data-adder="{{adder.ID}}">
        <td class="left">{{adder.ALIAS}}</td>
        <td>{{adder.baseCost}}</td>
        <td class="right">
            {{!-- <a class="item-control modifier-edit" data-action="edit" title="Edit"><i
                    class="fas fa-edit"></i></a>
            <a class="item-control modifier-delete" data-action="delete" title="Delete">
                <i class="fas fa-trash"></i>
            </a> --}}
        </td>
    </tr>
    {{/each}}

    {{/each}}
    </table>